<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.cafeapp.controllers.RegisterScreenController">
        <Label fx:id="registerLabel" style="-fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-font-family: Yanone Kaffeesatz ExtraLight;" text="Register" />
        <Label fx:id="usernameLabel" style="-fx-text-fill: white;" text="Username:" />
        <TextField fx:id="usernameField" style="-fx-background-color: #FED8B1;" />
        <Label fx:id="emailLabel" style="-fx-text-fill: white;" text="Email:" />
        <TextField fx:id="emailField" style="-fx-background-color: #FED8B1;" />
        <Label fx:id="passwordLabel" style="-fx-text-fill: white;" text="Password:" />
        <PasswordField fx:id="passwordField" style="-fx-background-color: #FED8B1;" />
        <Button fx:id="registerButton" onAction="#handleRegister" style="-fx-background-color: #A67B5B; -fx-text-fill: white;" text="Register" />
        <Button fx:id="loginScreen" onAction="#showLoginScreen" style="-fx-text-fill: white; -fx-background-color: #A67B5B;" text="Back to Login" />
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
    </VBox>
